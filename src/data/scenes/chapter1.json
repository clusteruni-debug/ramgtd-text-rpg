          { "type": "setFlag", "flag": "exam_searching" }
        ],
        "nextScene": "ch1_exam_03"
      },
      {
        "text": "\"이 시스템을 부수는 것.\"",
        "effects": [
          { "type": "modifyKarma", "value": -3 },
          { "type": "setFlag", "flag": "exam_destroy" }
